@inject LanguageService language



<div class="navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow buyukHeader mb-4">
  
    <div class="yaziGelecek">
        <a class="" asp-area="" asp-controller="Tarifs" asp-action="Index"><img src="~/images/logoYazi.png" id="LogoYaziKontrol" alt="logoYazisi" /></a>

    </div>
    
    <div class="aramaVeGiris">
        <div class="arama">Arama</div>
        <div class="giris">
            <div id="KullaniciKismi">  <partial name="_LoginPartial" /></div>
        </div>
        

        <nav id="navbar" class="navbar mb-3">

            <div class="container-fluid" id="Nav">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @language.Getkey("Tarifler")
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-area="" asp-controller="Tarifs" asp-action="anaYemek">@language.Getkey("Ana Yemek Tarifleri")</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Tarifs" asp-action="corba">@language.Getkey("Ana Yemek Tarifleri")</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Tarifs" asp-action="tatli">@language.Getkey("Tatlý Tarifleri")</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Tarifs" asp-action="icecek">@language.Getkey("Ýçecek Tarifleri")</a>
                            </div>
                        </li>
                     
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tarifs" asp-action="Create">@language.Getkey("Tarif Ekle")</a>
                            </li>
                        

                        @if (User.IsInRole("Admin"))
                        {
                            if (User.Identity.IsAuthenticated)
                            {

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @language.Getkey("Yönetici")
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" asp-area="" asp-controller="Yorums" asp-action="Index">@language.Getkey("Yorum Onaylarý")</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Tarifs" asp-action="admin">@language.Getkey("Tarif Onaylarý")</a>
                                
                                    </div>
                                </li>

                            }
                        }


                    </ul>
                </div>
            </div>


            <div>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @language.Getkey("Dil")
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-area="" asp-controller="Tarifs" asp-action="ChangeLanguage" asp-route-culture="tr-TR"><i class="flag-icon flag-icon-gb"></i>Türkçe</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Tarifs" asp-action="ChangeLanguage" asp-route-culture="en-US"><i class="flag-icon flag-icon-gb"></i>English</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Tarifs" asp-action="ChangeLanguage" asp-route-culture="de-DE"><i class="flag-icon flag-icon-de"></i>Deutsch</a>
                    </div>
                </li>
            </div>
            


        </nav>

    </div>



</div>


<nav class="navbar navbar-expand-sm bg-dark navbar-dark mt-5" >
    <!-- Brand -->
     <div class="logoGelecek navbar-brand">
        <a class="" asp-area="" asp-controller="Tarifs" asp-action="Index">
            <img src="~/images/logoOnce.png" id="LogoResiKontrol" class="logoDegisme" alt="logo"/>
        </a>
       
    </div>
    <!-- Links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="#">Link 1</a>
        </li>
        <li class="nav-item">
